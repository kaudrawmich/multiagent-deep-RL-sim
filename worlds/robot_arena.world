<?xml version="1.0"?>
<sdf version="1.10">
  <world name="robot_arena">

    <!-- Disable GUI grid and set a neutral background -->
    <scene>
      <grid>false</grid>
      <background>0.85 0.85 0.85 1</background>
    </scene>

    <!-- World level gravity -->
    <gravity>0 0 -9.81</gravity>

    <!-- Enable all sensors in this world -->
    <plugin filename="gz-sim-physics-system" name="gz::sim::systems::Physics"/>
    <plugin filename="gz-sim-user-commands-system" name="gz::sim::systems::UserCommands"/>
    <plugin filename="gz-sim-scene-broadcaster-system" name="gz::sim::systems::SceneBroadcaster"/>
    <plugin filename="gz-sim-sensors-system" name="gz::sim::systems::Sensors"/>

    <!-- Physics engine settings -->
    <physics name="ode-default" type="ode">
      <max_step_size>0.001</max_step_size>
      <real_time_update_rate>1000</real_time_update_rate>
      <real_time_factor>1.0</real_time_factor>
    </physics>

    <!-- Sun only (no infinite ground) -->
    <light type="directional" name="sun">
      <cast_shadows>true</cast_shadows>
      <diffuse> 1 1 1 1</diffuse>
      <specular>0.1 0.1 0.1 1</specular>
      <attenuation>
        <range>1000</range>
        <constant>1</constant>
        <linear>0</linear>
        <quadratic>0</quadratic>
      </attenuation>
      <direction>-0.5 0.5 -1</direction>
    </light>

    <!-- Finite floor: just inside the walls to avoid z-fighting -->
    <model name="floor">
      <pose>0 0 -0.01 0 0 0</pose>  <!-- top surface at z = 0 -->
      <static>true</static>
      <link name="link">
        <collision name="collision">
          <geometry>
            <box><size>6.0 4.0 0.02</size></box>
          </geometry>
          <surface>
            <friction>
              <ode>
                <mu>1.2</mu>
                <mu2>1.2</mu2>
              </ode>
            </friction>
          </surface>
        </collision>
        <visual name="visual">
          <geometry>
            <box><size>6.0 4.0 0.02</size></box>
          </geometry>
          <material>
            <ambient>0.25 0.25 0.25 1</ambient>
            <diffuse>0.35 0.35 0.35 1</diffuse>
          </material>
        </visual>
      </link>
    </model>

    <!-- Left wall -->
    <model name="wall_left">
      <pose>-3.1 0 1.25 0 0 0</pose> <!-- position: x=-3, y=0, z=1.25 -->
      <static>true</static>
      <link name="link">
        <collision name="collision">
          <geometry>
            <box><size>0.2 4.0 2.5</size></box>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <box><size>0.2 4.0 2.5</size></box> <!-- X  Y  Z -->
          </geometry>
          <material>
            <ambient>0.1 0.1 0.1 1</ambient>
            <diffuse>0.2 0.2 0.2 1</diffuse>
          </material>
        </visual>
      </link>
    </model>

    <!-- Right wall -->
    <model name="wall_right">
      <pose>3.1 0 1.25 0 0 0</pose>
      <static>true</static>
      <link name="link">
        <collision name="collision">
          <geometry>
            <box><size>0.2 4.0 2.5</size></box>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <box><size>0.2 4.0 2.5</size></box>
          </geometry>
          <material>
            <ambient>0.1 0.1 0.1 1</ambient>
            <diffuse>0.2 0.2 0.2 1</diffuse>
          </material>
        </visual>
      </link>
    </model>

    <!-- Back wall (negative Y) -->
    <model name="wall_back">
      <pose>0 -2.1 1.25 0 0 0</pose>
      <static>true</static>
      <link name="link">
        <collision name="collision">
          <geometry>
            <box><size>6.0 0.2 2.5</size></box>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <box><size>6.0 0.2 2.5</size></box>
          </geometry>
          <material>
            <ambient>0.1 0.1 0.1 1</ambient>
            <diffuse>0.2 0.2 0.2 1</diffuse>
          </material>
        </visual>
      </link>
    </model>

    <!-- Front wall (positive Y) -->
    <model name="wall_front">
      <pose>0 2.1 1.25 0 0 0</pose>
      <static>true</static>
      <link name="link">
        <collision name="collision">
          <geometry>
            <box><size>6.0 0.2 2.5</size></box>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <box><size>6.0 0.2 2.5</size></box>
          </geometry>
          <material>
            <ambient>0.1 0.1 0.1 1</ambient>
            <diffuse>0.2 0.2 0.2 1</diffuse>
          </material>
        </visual>
      </link>
    </model>

    <!-- Goal region -->
    <model name="goal_region">
      <pose>2.25 0 0.001 0 0 0</pose>
      <static>true</static>
      <link name="link">
        <visual name="goal_visual">
          <geometry>
            <box><size>1.5 1.0 0.002</size></box>
          </geometry>
          <material>
            <ambient>0.05 0.25 0.05 1</ambient>
            <diffuse>0.10 0.85 0.10 1</diffuse>
          </material>
          <transparency>0.35</transparency>
          <cast_shadows>false</cast_shadows>
        </visual>

        <!-- Collision for sensor -->
        <collision name="goal_collision">
          <pose>0 0 -0.00225 0 0 0</pose>
          <geometry>
            <box><size>1.5 1.0 0.0025</size></box>
          </geometry>
          <surface>
            <contact>
              <ode>
                <soft_cfm>1e-9</soft_cfm>
                <soft_erp>0</soft_erp>
              </ode>
            </contact>
            <bounce>
              <restitution_coefficient>0.0</restitution_coefficient>
              <threshold>1e-3</threshold>
            </bounce>
            <friction><ode><mu>0.0</mu><mu2>0.0</mu2></ode></friction>
          </surface>
        </collision>

        <!-- Contact sensor -->
        <sensor name="goal_sensor" type="contact">
          <always_on>true</always_on>
          <update_rate>20</update_rate>
          <contact><collision>goal_collision</collision></contact>
          <visualize>false</visualize>
        </sensor>
      </link>
      
      <plugin filename="gz-sim-pose-publisher-system"
              name="gz::sim::systems::PosePublisher">
        <publish_model_pose>true</publish_model_pose>
        <publish_link_pose>false</publish_link_pose>
        <publish_sensor_pose>false</publish_sensor_pose>
        <publish_nested_model_pose>false</publish_nested_model_pose>
        <use_pose_vector_msg>false</use_pose_vector_msg>
        <update_frequency>30</update_frequency>
      </plugin>
    </model>

    <!-- Obstacle 1: upper cylinder -->
    <model name="obstacle_upper">
      <pose>0.8 0.8 0.5 0 0 0</pose>
      <static>true</static>
      <link name="link">
        <collision name="collision">
          <geometry>
            <cylinder><radius>0.25</radius><length>1.0</length></cylinder>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <cylinder><radius>0.25</radius><length>1.0</length></cylinder>
          </geometry>
          <material>
            <ambient>0.25 0.05 0.05 1</ambient>
            <diffuse>0.85 0.10 0.10 1</diffuse>
          </material>
        </visual>
      </link>
      
      <plugin filename="gz-sim-pose-publisher-system"
              name="gz::sim::systems::PosePublisher">
        <publish_model_pose>true</publish_model_pose>
        <publish_link_pose>false</publish_link_pose>
        <publish_sensor_pose>false</publish_sensor_pose>
        <publish_nested_model_pose>false</publish_nested_model_pose>
        <use_pose_vector_msg>false</use_pose_vector_msg>
        <update_frequency>30</update_frequency>
      </plugin>
    </model>

    <!-- Obstacle 2: lower cylinder -->
    <model name="obstacle_lower">
      <pose>-0.1 -0.6 0.5 0 0 0</pose>
      <static>true</static>
      <link name="link">
        <collision name="collision">
          <geometry>
            <cylinder><radius>0.25</radius><length>1.0</length></cylinder>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <cylinder><radius>0.25</radius><length>1.0</length></cylinder>
          </geometry>
          <material>
            <ambient>0.25 0.05 0.05 1</ambient>
            <diffuse>0.85 0.10 0.10 1</diffuse>
          </material>
        </visual>
      </link>
      
      <plugin filename="gz-sim-pose-publisher-system"
              name="gz::sim::systems::PosePublisher">
        <publish_model_pose>true</publish_model_pose>
        <publish_link_pose>false</publish_link_pose>
        <publish_sensor_pose>false</publish_sensor_pose>
        <publish_nested_model_pose>false</publish_nested_model_pose>
        <use_pose_vector_msg>false</use_pose_vector_msg>
        <update_frequency>30</update_frequency>
      </plugin>
    </model>

  </world>
</sdf>
