<?xml version="1.0"?>
<sdf version="1.10">
  <model name="push_box">
    <static>false</static>
    <!-- put center at z = 0.25 so a 0.5 m cube sits on the floor -->
    <pose>0 0 0.25 0 0 0</pose>

    <link name="link">
      <!-- 5 kg total mass -->
      <inertial>
        <mass>5.0</mass>
        <!-- inertia of a 0.5 m cube: I = (1/12) m (0.5^2 + 0.5^2) = 0.208333... -->
        <inertia>
          <ixx>0.2083333333</ixx>
          <iyy>0.2083333333</iyy>
          <izz>0.2083333333</izz>
          <ixy>0</ixy><ixz>0</ixz><iyz>0</iyz>
        </inertia>
      </inertial>

      <collision name="collision">
        <geometry><box><size>0.5 0.5 0.5</size></box></geometry>
        <surface>
          <friction><ode><mu>0.8</mu><mu2>0.8</mu2></ode></friction>
        </surface>
      </collision>

      <visual name="visual">
        <geometry><box><size>0.5 0.5 0.5</size></box></geometry>
        <material>
          <ambient>0.25 0.15 0.05 1</ambient>
          <diffuse>0.80 0.40 0.10 1</diffuse>
        </material>
      </visual>
    </link>
  </model>
</sdf>
