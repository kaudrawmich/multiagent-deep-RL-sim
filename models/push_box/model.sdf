<?xml version="1.0"?>
<sdf version="1.10">
  <model name="push_box">
    <static>false</static>
    <!-- put center at z = 0.40 so a 0.8 m cube sits on the floor -->
    <pose>0 0 0.40 0 0 0</pose>

    <link name="link">
      <!-- 7.5 kg total mass -->
      <inertial>
        <mass>7.5</mass>
        <!-- inertia of a 0.8 m cube = 1/6 ms^2 -->
        <inertia>
          <ixx>0.800</ixx>
          <iyy>0.800</iyy>
          <izz>0.800</izz>
          <ixy>0</ixy><ixz>0</ixz><iyz>0</iyz>
        </inertia>
      </inertial>

      <collision name="collision">
        <geometry><box><size>0.8 0.8 0.8</size></box></geometry>
        <surface>
          <contact>
            <ode>
              <soft_cfm>0</soft_cfm>
              <soft_erp>0</soft_erp>
            </ode>
          </contact>
          <bounce>
            <restitution_coefficient>0.0</restitution_coefficient>
            <threshold>1e-3</threshold>
          </bounce>
          <friction>
            <ode>
              <mu>0.5</mu><mu2>0.5</mu2>
              <slip1>0.0</slip1><slip2>0.0</slip2>
            </ode>
          </friction>
        </surface>
      </collision>

      <visual name="visual">
        <geometry><box><size>0.8 0.8 0.8</size></box></geometry>
        <material>
          <ambient>0.25 0.15 0.05 1</ambient>
          <diffuse>0.80 0.40 0.10 1</diffuse>
        </material>
      </visual>
    </link>
  
  <plugin filename="gz-sim-pose-publisher-system" name="gz::sim::systems::PosePublisher">
    <publish_model_pose>true</publish_model_pose>
    <publish_link_pose>false</publish_link_pose>
    <publish_sensor_pose>false</publish_sensor_pose>
    <publish_nested_model_pose>false</publish_nested_model_pose>
    <use_pose_vector_msg>false</use_pose_vector_msg>
    <update_frequency>30</update_frequency>
  </plugin>

  </model>
</sdf>
